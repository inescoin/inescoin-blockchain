use Inescoin\Backup;

require __DIR__.'/../../vendor/autoload.php';

$params = getopt('', [
	'prefix::',
    'file::',
	'force::',
]);

$prefix = $params['prefix'] ?? 'moon';
$force = $params['force'] ?? false;
$fileName = $params['file'] ?? './inescoin.tar.gz';

(new Backup($prefix, $fileName, $force))->import();
